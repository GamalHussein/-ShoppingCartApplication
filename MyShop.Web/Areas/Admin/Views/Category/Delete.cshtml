@model Category

@{
	ViewBag.PageTitle = "Category Managment";
	ViewBag.CardTitle = "Delete Category";
	Layout = "~/Views/Shared/_Dashbord.cshtml";
}

<form asp-action="DeleteConfirmed" method="post">
	<input type="hidden" asp-for="Id" />
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="form-group">
		<label asp-for="Name"></label>
		<input asp-for="Name" readonly class="form-control" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Description"></label>
		<textarea asp-for="Description" readonly class="form-control"></textarea>
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>
	<div class="form-group">
		<input type="submit" value="Delete" class="btn btn-danger" />
	</div>
</form>