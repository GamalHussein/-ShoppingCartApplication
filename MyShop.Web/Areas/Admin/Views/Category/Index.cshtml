@model IEnumerable<Category>

@{
	ViewBag.PageTitle = "Category Managment";
	ViewBag.CardTitle = "Categories";
	Layout = "~/Views/Shared/_Dashbord.cshtml";
}

<div>
	<a asp-action="Create" class="btn btn-primary">Create</a>

</div>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Category Name</th>
			<th>Description</th>
			<th>Created Time</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var category in Model)
		{
			<tr>
				<td>@category.Name</td>
				<td>@category.Description</td>
				<td>@category.CreatedDate</td>
				<td>
					<a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary">Edit</a>
					<a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>


	