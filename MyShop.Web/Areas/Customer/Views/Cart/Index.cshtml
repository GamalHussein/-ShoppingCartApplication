
@using MyShop.Entities.ViewModels

@model ShoppingCartVM

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-10 col-md-offset-1">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th class="text-center">Price</th>
                        <th class="text-center">Total</th>
                        <th> </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model.Carts)
                    {
                    <tr>
                        <td class="col-md-6">
                            <div class="media">
                                <a class="thumbnail pull-left" href="#"> <img class="media-object" src="~/@item.product.ImageUrl" style="width: 150px; height: 200px;"> </a>
                                <div class="media-body">
                                    <h4 class="media-heading"><a href="#">@item.product.Name</a></h4>
                                    <h5 class="media-heading"> by <a href="#">@item.product.Description</a></h5>
                                    @*<span>Status: </span><span class="text-warning"><strong>Leaves warehouse in 2 - 3 weeks</strong></span>*@
                                </div>
                            </div>
                        </td>
                        <td class="col-md-1" style="text-align: center">
                            <td class="col-md-1 text-center">
                            <div class="input-group">
                                <a class="btn btn-primary" asp-action="Blus" asp-route-cartId="@item.Id">+</a>
									<span class="form-control" style="width: 50px; text-align: center;">@item.Count</span>
                                    <a class="btn btn-primary" asp-action="Minus" asp-route-cartId="@item.Id">-</a>
       



                            </div>

                        </td>
                        <td class="col-md-1 text-center"><strong>$@item.product.Price</strong></td>
                        <td class="col-md-1 text-center">
                             <strong>@($"${item.product.Price * item.Count}")</strong>
                        </td>

                        <td class="col-md-1">
                                <a asp-action="Remove" asp-route-cartId="@item.Id" class="btn btn-danger">X </a>
                        </td>
                    </tr>
                        
                    }
                    @* <tr> *@
                    @*     <td>   </td> *@
                    @*     <td>   </td> *@
                    @*     <td>   </td> *@
                    @*     <td><h5>Subtotal</h5></td> *@
                    @*     <td class="text-right"><h5><strong>$24.59</strong></h5></td> *@
                    @* </tr> *@
                    @* <tr> *@
                    @*     <td>   </td> *@
                    @*     <td>   </td> *@
                    @*     <td>   </td> *@
                    @*     <td><h5>Discount</h5></td> *@
                    @*     <td class="text-right"><h5><strong>$0</strong></h5></td> *@
                    @* </tr> *@
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td><h3>Total</h3></td>
                        <td class="text-right"><h3><strong>$@Model.TotalPrice</strong></h3></td>
                    </tr>
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td>
                            <button type="button" class="btn btn-default">
                                <span class="glyphicon glyphicon-shopping-cart"></span> Continue Shopping
                            </button>
                        </td>
                        <td>
                            <button type="button" class="btn btn-success">
                                Checkout <span class="glyphicon glyphicon-play"></span>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
